<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:background="#CCFF99"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:text="Universidad Tecnologia de Panama"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#0C0E09"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Facultad de Sistemas"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/txtPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Seleccione Su perfil"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="#000"

        />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60px"


        android:id="@+id/Perfiles">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/rbtEstudiante"
            android:text="Sitio Estdiante"
            android:checked="true"
            android:buttonTint="#6600CC"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtProfesor"
            android:text="Sitio Profesor"
            android:checked="true"
            android:buttonTint="#6600CC"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbtUTP"
            android:text="Sitio UTP"
            android:checked="true"
            android:buttonTint="#6600CC"

            />

        <RadioButton
            android:id="@+id/rbtVirtual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sitio Virtual"
            android:checked="true"
            android:buttonTint="#6600CC"

            />


    </RadioGroup>
    <Button
        android:id="@+id/btnValidar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Entrar"
        android:onClick="Entrar"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffff"
        android:background="@drawable/boton_login"
        android:textStyle="bold"
        />



</LinearLayout>