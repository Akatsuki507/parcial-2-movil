<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Su Historial de Nota es: "
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"

        />



    <ListView
        android:id="@+id/NotasList"
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:background="#CCFF99" />


    <TextView
        android:id="@+id/Seleccionado"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginBottom="10px"
        android:autoText="true"
        android:background="#6600CC"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:textColor="#fff"
        />

    <EditText
        android:id="@+id/Calificacion"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:hint="Nota"
        android:layout_marginTop="5pt"
        android:backgroundTint="#CCFF99"
        />

    <Button
        android:id="@+id/ChangeNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar nota"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        android:background="@drawable/boton_login"
        android:textStyle="bold"
        />

</LinearLayout>