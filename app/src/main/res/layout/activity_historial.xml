<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txtSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="Su Historial de Nota es: "
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"

        />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="80dp"
        android:orientation="horizontal"

        >

        <EditText

            android:id="@+id/EditNombre"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input"
            android:hint="Nombre"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="#6600CC"


            />

        <Button
            android:id="@+id/UpdateNAME"

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/boton_login"
            android:onClick="Ingresar"
            android:text="Actualizar"
            android:textColor="#ffff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <EditText
            android:id="@+id/EditPass"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input"
            android:hint="ContraseÃ±a"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:textColorHint="#6600CC" />

        <Button
            android:id="@+id/UpdatePASS"

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/boton_login"
            android:onClick="Ingresar"
            android:text="Actualizar "
            android:textColor="#ffff"
            android:textStyle="bold" />
    </LinearLayout>


    <ListView
        android:id="@+id/NotasList"
        android:layout_width="411dp"
        android:layout_height="200dp"
        android:background="#CCFF99"

        />



    <TextView
        android:id="@+id/Seleccionado"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="#6600CC"
        android:textColor="#fff"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        />

    <EditText
        android:id="@+id/Calificacion"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:hint="Nota"
        android:layout_marginTop="5pt"
        android:backgroundTint="#6600CC"
        />

    <Button
        android:id="@+id/ChangeNote"
        android:layout_width="match_parent"
        android:layout_height="18pt"
        android:text="Actualizar nota"
        android:textColor="#ffff"
        android:layout_marginTop="5dp"
        android:background="@drawable/boton_login"
        android:textStyle="bold"
        />

</LinearLayout>